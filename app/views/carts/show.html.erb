<h2>Checkout</h2>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |hair| %>
      <tr>
        <td><%= hair.name %></td>
        <td>1</td>
        <td><%= number_to_currency(hair.price) %></td>
        <td><%= number_to_currency(hair.price * 1) %></td>
        <td><%= link_to "Remove", remove_cart_path(hair), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Total: <%= number_to_currency(@cart_items.sum(&:price)) %></h3>
<%= link_to "Proceed to Checkout", checkout_hair_order_path(@order.hair, @order), class: "btn btn-primary" %>
