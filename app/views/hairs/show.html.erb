<div class="row">
  <h1><%= @hair.name %></h1>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Hair Details</h5>
        <p class="card-text">Price: Â£<%= @hair.price %></p>
        <p class="card-text">Length: <%= @hair.length %> inches</p>
        <p class="card-text">Texture: <%= @hair.texture %></p>
        <p class="card-text">Origin: <%= @hair.origin %></p>
      </div>
    </div>
</div>
<div>
  <h2>Order your hair</h2>
  <%= simple_form_for [@hair, @order] do |f| %>
    <%= f.hidden_field :hair_id, value: @hair.id %>
    <%= f.input :quantity, collection: (1..100).to_a, prompt: "How many?" %>
    <%= f.submit "Place your order", class: "btn btn-primary" %>
  <%  end %>
</div>
<div>
  <h2><strong>Reviews</strong></h2>
  <ul class="list-group">
    <% @hair.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
  <%= link_to 'Leave a review', new_hair_review_path(@hair) %>
  <br>
</div>
